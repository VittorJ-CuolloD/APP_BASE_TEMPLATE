{% extends 'backoffice/base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class=" row justify-content-center bg-light">
			<div class="col-12 col-md-4">


				{{ form_start(resetForm,{'attr':{"class":"border mt-5 bg-white g-opacity-50 rounded-5 p-4 mx-auto"}}) }}

                <h1 class="h3 mb-3 font-weight-normal text-center text-uppercase">Ingresa la nueva contraseña</h1>

				{{ form_row(resetForm.plainPassword) }}

				<button class="btn btn-success btn-block mx-auto mt-3">Modificar contraseña</button>

				{{ form_end(resetForm) }}

			</div>
		</div>
	</div>
{% endblock %}
