{% extends 'backoffice/base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	
	<div class="container-fluid">
		<div class=" row justify-content-center bg-light">
			<div class="col-12 col-md-4">

				{{ form_start(requestForm,{'attr':{"class":"border mt-5 bg-white g-opacity-50 rounded-5 p-4 mx-auto"}}) }}

                <h1 class="h3 mb-3 font-weight-normal text-center text-uppercase">RECUPERAR CONTRASEÑA</h1>

				{{ form_row(requestForm.email) }}
				<div class="my-2">
					<small>
					Introduce tu dirección de correo electrónico y te enviaremos un enlace para restablecer su contraseña.
					</small>
				</div>

				<button class="btn btn-dark btn-block mx-auto mt-3">Enviar email</button>

                <div class="mt-3 text-center">
                    <div
                        class="col">
                        <!-- Simple link -->
                        <a href="{{ path('user_login') }}">¿Ya tienes tu contraseña?</a>
                    </div>

                </div>

				{{ form_end(requestForm) }}

			</div>
		</div>
	</div>
{% endblock %}
