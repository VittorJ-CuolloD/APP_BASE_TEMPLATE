{% extends 'admin/base.html.twig' %}

{% block title %}Usuarios
{% endblock %}

{% block body %}

	<div class="container-fluid mb-5">

		<h1 class="h3 my-3 font-weight-normal text-center text-uppercase">Usuarios</h1>


		<div class="action-buttons">

			<div>
				<a href="{{ path('admin_user_new') }}" class="btn btn-outline-success float-start">
					<i class="fas fa-plus"></i>
					Registrar Usuario</a>
				<a href="{{ path('admin_user_excel') }}" class="btn btn-outline-success float-end ms-3">
					<i class="fas fa-file-excel"></i>
					Excel</a>
			</div>
		</div>

		<div class="table-container" id="datatable">
			<table class="table table-sm">
				<thead>
					<tr>
						<th>ID</th>
						<th>Nombre</th>
						<th>Email</th>
						<th>Roles</th>
						<th>Registro</th>
						<th>Última Actualización</th>
						<th>Activo</th>
						<th>Acciones</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.id }}</td>
							<td>{{ user.name }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
							<td>{{ user.registeredAt ? user.registeredAt|date('d-m-Y H:i:s') : '' }}</td>
							<td>{{ user.updatedAt ? user.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
							<td>
								{% if user.active %}

									<a href="{{ path('admin_user_disable',{'id':user.id}) }}" class="btn btn-sm btn-success btn-floating mx-auto d-flex align-items-center justify-content-center">
										<i class="fas fa-check"></i>
									</a>
								{% else %}
									<a href="{{ path('admin_user_enable',{'id':user.id}) }}" class="btn btn-sm btn-danger btn-floating mx-auto d-flex align-items-center justify-content-center">
										<i class="fas fa-close"></i>
									</a>
								{% endif %}
							</td>
							<td>
								<div class='d-flex justify-content-center gap-1'>

									<a href="{{ path('admin_user_show',{'id':user.id}) }}" class="btn btn-sm btn-primary btn-floating d-flex align-items-center justify-content-center" data-mdb-ripple-color="dark">
										<i class="fas fa-eye"></i>
									</a>

									<a href="{{ path('admin_user_edit',{'id':user.id}) }}" class="btn btn-sm btn-warning btn-floating d-flex align-items-center justify-content-center" data-mdb-ripple-color="dark">
										<i class="fas fa-pencil"></i>
									</a>

									{% include 'admin/front_user/_delete_form.html.twig' %}

								</div>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
