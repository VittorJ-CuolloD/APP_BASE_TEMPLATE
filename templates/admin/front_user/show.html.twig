{% extends 'admin/base.html.twig' %}

{% block title %}	{{ 'Details #%text%' | trans({ '%text%': user.id },null, lang) }}

{% endblock %}
{% block header %}
	{{ 'Details #%text%' | trans({ '%text%': user.id },null, lang) }}

{% endblock %}
{% block body %}

	<div class="container-fluid">

		
		<div class="d-flex justify-content-center">

			<div class="col-12 col-md-6 rounded border">

				<ul class="list-group list-group-flush">
					
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="fw-bold mb-0">
							{{'Email'|trans({},null, lang)}}</h6>
						<span class="text-dark">{{ user.email }}</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="fw-bold mb-0">
							{{'Name'|trans({},null, lang)}}</h6>
						<span class="text-dark">{{ user.name }}</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="fw-bold mb-0">
							{{'State'|trans({},null, lang)}}</h6>
						<span class="text-dark">
							{% if user.active %}

								<span class="badge rounded-pill badge-success">{{'active'|trans({},null, lang)}}</span>
							{% else %}
								<span class="badge rounded-pill badge-danger">{{'inactive'|trans({},null, lang)}}</span>
							{% endif %}
						</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="fw-bold mb-0">
							{{'Roles'|trans({},null, lang)}}</h6>
						<span class="text-dark">{{ user.roles ? user.roles|json_encode : '' }}</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="fw-bold mb-0">
							{{'Registration date'|trans({},null, lang)}}</h6>
						<span class="text-dark">{{ user.registeredAt ? user.registeredAt|date('d/m/Y H:i:s') : '' }}</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="fw-bold mb-0">
							{{'Updated date'|trans({},null, lang)}}</h6>
						<span class="text-dark">{{ user.updatedAt ? user.updatedAt|date('d/m/Y H:i:s') : '' }}</span>
					</li>

				</ul>
			</div>

		</div>
	</div>

{% endblock %}
