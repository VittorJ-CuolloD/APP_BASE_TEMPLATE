{% set lang = (app.session.get('_locale') is defined and app.session.get('_locale') is not empty) ? app.session.get('_locale') : 'es' %}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">
		<link
		rel="shortcut icon" href="{{ asset('assets/img/favicon-doctaforum.png') }}">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('assets/Libraries/MDB/css/mdb.min.css') }}"/>
			<link rel="stylesheet" href="{{ asset('assets/Libraries/FontAwesome/css/all.min.css') }}"/>
			<link rel="stylesheet" href="{{ asset('assets/Libraries/GDPR/dist/style.css') }}"/>
			<link rel="stylesheet" href="{{ asset('assets/css/admin/default-styles.css') }}"/>
		{% endblock %}
		{% block javascripts %}
			<script src="{{ asset('assets/Libraries/MDB/js/mdb.min.js') }}"></script>
			<script src="{{ asset('assets/Libraries/jQuery/jquery.min.js') }}"></script>
			<script src="{{ asset('assets/Libraries/FontAwesome/js/all.min.js') }}"></script>
			<script src="{{ asset('assets/Libraries/SweetAlert/sweetalert.all.min.js') }}"></script>
			<script src="{{ asset('assets/Libraries/GDPR/dist/script.js') }}"></script>
			<script src="{{ asset('assets/Libraries/GDPR/src/langs/es.js') }}"></script>

			<!-- VARIABLE DE IDIOMA PARA EL JS DEL ADMIN -->
			<script>
			var search = "{{'search'|trans({}, null, lang)}} "
			var confirmation = "{{'confirmation'|trans({}, null, lang) }}"
			var si = "{{'yes'|trans({}, null, lang) }}"
			var no = "{{ 'not'|trans({}, null, lang) }}"
			var are_you_sure_to_delete_this_item = "{{'are_you_sure_to_delete_this_item'|trans({}, null, lang)}}" 
			</script>
			<script src="{{ asset('assets/js/admin/admin.js') }}"></script>
		{% endblock %}
	</head>
	<body class="bg-light">
		{% include "admin/includes/header.html.twig" %}

		<div class="col-11 mt-5 mx-auto card">
				<div class="card-header text-uppercase text-center d-flex align-items-center">

					{# 
					
					{% if app.request.attributes.get('_route') != 'admin_index' %}
					
					<button type="button" onClick="window.history.back();" class="btn btn-tertiary text-success p-0 float-start d-flex align-items-center" data-mdb-ripple-color="light"><i class="fas fa-circle-left h3 mb-0"></i></button>

					{% endif %}

 					#}
					<div class="mx-auto h4 mb-0 fw-bold font-monospace">{% block header %}{% endblock %}</div>

				</div>

				{# {{ breadcrumbs() }} #}
				
				<div class="card-body p-2"> 
			
					{% block body %}{% endblock %}
						
				</div>

				{% include "admin/includes/footer.html.twig" %}
			</body>
		</html>
