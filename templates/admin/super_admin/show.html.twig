{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'Details #%text%' | trans({ '%text%': admin.id },null, lang) }}
{% endblock %}
{% block header %}{{ 'Details #%text%' | trans({ '%text%': admin.id },null, lang) }}
{% endblock %}
{% block body %}

	<div class="container-fluid">

		
<div class="text-center my-3">
<img onerror="this.onerror=null;this.src='{{asset('assets/img/profile-default.png')}}';" src="{{admin.image != '' ? asset('assets/uploads/profile-pictures/' ~ admin.image):asset('assets/img/profile-default.png')}}" width="150" class="border img-fluid rounded-circle" alt="Avatar default" loading="lazy"/>

</div>
		<div class="d-flex justify-content-center">
			<div class="col-12 col-md-6 rounded border">

					
				<ul class="list-group list-group-flush">
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="fw-bold mb-0">
							{{ 'ID'|trans({},null, lang) }}</h6>
						<span class="text-dark">#{{ admin.id }}</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="fw-bold mb-0">
							{{ 'Email'|trans({},null, lang) }}</h6>
						<span class="text-dark">{{ admin.email }}</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="fw-bold mb-0">
							{{ 'Name'|trans({},null, lang) }}</h6>
						<span class="text-dark">{{ admin.name }}</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="fw-bold mb-0">
							{{ 'State'|trans({},null, lang) }}</h6>
						<span class="text-dark">
							{% if admin.active %}
								<span class="badge rounded-pill badge-success">{{ 'active'|trans({},null, lang) }}</span>
							{% else %}
								<span class="badge rounded-pill badge-danger">{{ 'inactive'|trans({},null, lang) }}</span>
							{% endif %}
						</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="fw-bold mb-0">
							{{ 'Roles'|trans({},null, lang) }}</h6>
						<span class="text-dark">{{ admin.roles ? admin.roles|json_encode : '' }}</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="fw-bold mb-0">
							{{ 'Registered date'|trans({},null, lang) }}</h6>
						<span class="text-dark">{{ admin.registeredAt ? admin.registeredAt|date('d/m/Y H:i:s') : '' }}</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="fw-bold mb-0">
							{{ 'Updated date'|trans({},null, lang) }}</h6>
						<span class="text-dark">{{ admin.updatedAt ? admin.updatedAt|date('d/m/Y H:i:s') : '' }}</span>
					</li>

				</ul>
			</div>

		</div>
	</div>

{% endblock %}
