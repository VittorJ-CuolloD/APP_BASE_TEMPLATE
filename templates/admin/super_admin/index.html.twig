{% extends 'admin/base.html.twig' %}

{% block title %}Administradores
{% endblock %}

{% block body %}

	<div class="container-fluid mb-5">

		<h1 class="h3 my-3 font-weight-normal text-center text-uppercase">Administradores</h1>

		<div class="action-buttons">
			<a href="{{ path('admin_manager_new') }}" class="btn btn-outline-success float-start">
				<i class="fas fa-plus"></i>
				Registrar Administrador</a>
			<a href="{{ path('admin_manager_excel') }}" class="btn btn-outline-success float-end ms-3">
				<i class="fas fa-file-excel"></i>

				Excel</a>
		</div>

		<div class="table-container" id="datatable">
			<table class="table">
				<thead>
					<tr>
						<th>ID</th>
						<th>Nombre</th>
						<th>Email</th>
						<th>Roles</th>
						<th>Registro</th>
						<th>Última Actualización</th>
						<th>Activo</th>
						<th>Acciones</th>
					</tr>
				</thead>
				<tbody>
					{% for admin in admins %}
						<tr>
							<td>{{ admin.id }}</td>
							<td>{{ admin.name }}</td>
							<td>{{ admin.email }}</td>
							<td>{{ admin.roles ? admin.roles|json_encode : '' }}</td>
							<td>{{ admin.registeredAt ? admin.registeredAt|date('d-m-Y H:i:s') : '' }}</td>
							<td>{{ admin.updatedAt ? admin.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
							<td>
								{% if admin.active %}

									<a type="button" href="{{ path('admin_manager_disable',{'id':admin.id}) }}" class="btn btn-sm btn-success btn-floating mx-auto d-flex align-items-center justify-content-center">
										<span>
											<i class="fas fa-check"></i>
										</span>
									</a>
								{% else %}
									<a type="button" href="{{ path('admin_manager_enable',{'id':admin.id}) }}" class="btn btn-sm btn-danger btn-floating mx-auto d-flex align-items-center justify-content-center">
										<i class="fas fa-close"></i>
									</a>
								{% endif %}
							</td>
							<td>

								<div class='d-flex justify-content-center gap-1'>
									<a href="{{ path('admin_manager_show',{'id':admin.id}) }}" class="btn btn-sm btn-primary btn-floating d-flex align-items-center justify-content-center" data-mdb-ripple-color="dark">
										<i class="fas fa-eye"></i>
									</a>

									<a href="{{ path('admin_manager_edit',{'id':admin.id}) }}" class="btn btn-sm btn-warning btn-floating d-flex align-items-center justify-content-center" data-mdb-ripple-color="dark">
										<i class="fas fa-pencil"></i>
									</a>

									{% include 'admin/super_admin/_delete_form.html.twig' %}
								</div>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
